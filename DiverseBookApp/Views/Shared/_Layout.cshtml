<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Application</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Book application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/aboutus">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/contactus">Contact us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/book/getallbooks">Get all Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/book/getbook">Get Book</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <button class="btn btn-outline-success mx-2" type="submit">Log in</button>
                        <button class="btn btn-outline-success mx-2" type="submit">Log out</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <footer class="border-top bg-dark text-light p-4 text-muted container text-center">
        <div>
            Copyright &copy; Book Application @DateTime.Now.Year
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
