@using DiverseBookApp.Enums;
@model BookModel

@{
    ViewData["Title"] = "Add new book";
}

<div class="container">
    <div class="display-4">Add new book</div>
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> New book added successfully. Click <a asp-action="getBook" asp-controller="Book" asp-route-id="@ViewBag.BookId">here</a> to view book details.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form method="post" enctype="multipart/form-data">
        <div class="row col-md-12">
            <div class="mb-3 col-md-6">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="Author" class="form-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-md-12">
            <div class="mb-3 col-md-6">
                <label asp-for="LanguageId" class="form-label"></label>
                <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Language">
                    <option value="">Please select language</option>
                </select>
                <span asp-validation-for="LanguageId" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" style="height:10px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-md-12">
            <div class="mb-3 col-md-6">
                <label asp-for="TotalPages" class="form-label"></label>
                <input asp-for="TotalPages" class="form-control" />
                <span asp-validation-for="TotalPages" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="CoverPhoto" class="form-label"></label>
                <input asp-for="CoverPhoto" class="form-control" id="formFile">
                <span asp-validation-for="CoverPhoto" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-md-12">
            <div class="mb-3 col-md-6">
                <label asp-for="GalleryImages" class="form-label"></label>
                <input asp-for="GalleryImages" class="form-control" id="formFileMultiple">
                <span asp-validation-for="GalleryImages" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="BookPdf" class="form-label"></label>
                <input asp-for="BookPdf"  accept=".pdf,.doc" class="form-control" id="formFile">
                <span asp-validation-for="BookPdf" class="text-danger"></span>
            </div>
        </div>
        <div class="row col-md-12">
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>